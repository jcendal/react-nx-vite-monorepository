{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "noImplicitAny": false,
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "@memegle/assets": ["libs/shared/assets/src/index.ts"],
      "@memegle/common": ["libs/shared/common/src/index.ts"],
      "@memegle/core": ["libs/shared/core/src/index.ts"],
      "@memegle/data-access": ["libs/shared/data-access/src/index.ts"],
      "@memegle/environments": ["libs/shared/environments/src/index.ts"],
      "@memegle/i18n": ["libs/shared/i18n/src/index.ts"],
      "@memegle/layout/collapsibles": [
        "libs/shared/layout/collapsibles/src/index.ts"
      ],
      "@memegle/shared/third-party/tanstack/router": [
        "libs/shared/third-party/tanstack/router/src/index.ts"
      ],
      "@memegle/styles": ["libs/shared/styles/src/index.ts"],
      "@memegle/third-party/tanstack/router": [
        "libs/shared/third-party/tanstack/router/src/index.ts"
      ],
      "@memegle/ui/forms": ["libs/shared/ui/forms/src/index.ts"],
      "@memegle/utils": ["libs/shared/utils/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
